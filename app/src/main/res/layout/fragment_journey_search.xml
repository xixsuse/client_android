<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:paddingBottom="5dp"
    tools:context=".journeys.search.JourneySearchFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            card_view:cardCornerRadius="0dp"
            card_view:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp">

                <RelativeLayout
                    android:id="@+id/rl_stations"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:id="@+id/fl_departure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_layout_departure_station"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <com.jaus.albertogiunta.justintrain_oraripendolaritrenitalia.utils.InstantAutoCompleteTextView
                                android:id="@+id/departure_station"
                                android:layout_width="270dp"
                                android:layout_height="wrap_content"
                                android:completionThreshold="1"
                                android:dropDownWidth="270dp"
                                android:hint="@string/atv_departure"
                                android:inputType="textCapSentences|textNoSuggestions"
                                android:singleLine="true"/>
                        </android.support.design.widget.TextInputLayout>

                        <Button
                            android:id="@+id/calc_clear_departure"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="end|center_vertical"
                            android:layout_marginBottom="10dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/ic_cancel_black_24dp"
                            android:visibility="gone"/>
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/fl_arrival"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/fl_departure">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_layout_arrival_station"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <com.jaus.albertogiunta.justintrain_oraripendolaritrenitalia.utils.InstantAutoCompleteTextView
                                android:id="@+id/arrival_station"
                                android:layout_width="270dp"
                                android:layout_height="wrap_content"
                                android:completionThreshold="1"
                                android:dropDownHeight="match_parent"
                                android:dropDownWidth="270dp"
                                android:hint="@string/atv_arrival"
                                android:inputType="textCapSentences|textNoSuggestions"
                                android:singleLine="true"/>

                        </android.support.design.widget.TextInputLayout>

                        <Button
                            android:id="@+id/calc_clear_arrival"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="end|center_vertical"
                            android:layout_marginBottom="10dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/ic_cancel_black_24dp"
                            android:visibility="gone"/>

                    </FrameLayout>

                    <Button
                        android:id="@+id/swap_stations"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="30dp"
                        android:layout_toEndOf="@id/fl_departure"
                        android:background="@drawable/ic_swap_vert"
                        />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_departure_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rl_stations"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="10dp"
                    android:text="Ora partenza"
                    android:textSize="12dp"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_departure_time"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:id="@+id/arrow_left_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:text="-4h"
                        android:textAlignment="center"
                        android:padding="12dp"
                        android:textSize="18dp"/>

                    <TextView
                        android:id="@+id/arrow_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/arrow_left_left"
                        android:clickable="true"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:text="-1h"
                        android:textAlignment="center"
                        android:padding="12dp"
                        android:textSize="18dp"/>

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_toEndOf="@id/arrow_left"
                        android:text="00:00"
                        android:textAlignment="center"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="18dp"/>

                    <TextView
                        android:id="@+id/arrow_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/time"
                        android:clickable="true"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:text="+1h"
                        android:textAlignment="center"
                        android:padding="12dp"
                        android:textSize="18dp"/>

                    <TextView
                        android:id="@+id/arrow_right_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/arrow_right"
                        android:clickable="true"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:text="+4h"
                        android:textAlignment="center"
                        android:padding="12dp"
                        android:textSize="18dp"/>
                </RelativeLayout>

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@android:color/transparent"
            android:orientation="vertical">
        </LinearLayout>
    </LinearLayout>

    </ScrollView>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/search_journey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="8dp"
        android:clickable="true"
        android:src="@drawable/ic_search_black_24dp"
        app:elevation="6dp"
        app:fabSize="normal"
        app:layout_anchor="@id/card_view"
        app:layout_anchorGravity="bottom|right|end"
        app:rippleColor="@color/colorPrimaryDark"/>


</android.support.design.widget.CoordinatorLayout>





