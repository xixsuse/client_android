<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:paddingBottom="5dp"
    tools:context=".journeys.search.JourneySearchFragment">


    <!-- Main content + Transparent view (needed for FAB to be across -->
    <LinearLayout
        android:id="@+id/ll_search_panel_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="vertical">


        <!-- Main content CONTAINER -->
        <android.support.v7.widget.CardView
            android:id="@+id/cv_search_panel_2"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"

            card_view:cardCornerRadius="0dp"
            card_view:cardElevation="@dimen/basic_card_elevation">


            <!-- Main content -->
            <RelativeLayout
                android:id="@+id/rl_search_panel_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/basic_horizontal_margin"
                android:layout_marginStart="@dimen/basic_horizontal_margin"
                android:layout_marginTop="@dimen/basic_vertical_margin">


                <!-- Top Panel -->
                <RelativeLayout
                    android:id="@+id/rl_station_search_panel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <!-- Departure Station -->
                    <FrameLayout
                        android:id="@+id/fl_departure_station"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/til_departure_station"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <com.jaus.albertogiunta.justintrain_oraripendolaritrenitalia.utils.InstantAutoCompleteTextView
                                android:id="@+id/iatv_departure_station"
                                android:layout_width="@dimen/iatv_station_width"
                                android:layout_height="wrap_content"

                                android:completionThreshold="1"
                                android:dropDownWidth="@dimen/iatv_station_width"
                                android:hint="@string/hint_departure"

                                android:inputType="textCapSentences|textNoSuggestions"
                                android:singleLine="true"/>
                        </android.support.design.widget.TextInputLayout>

                        <Button
                            android:id="@+id/btn_clear_departure_station"
                            android:layout_width="@dimen/btn_clear_tf_side"
                            android:layout_height="@dimen/btn_clear_tf_side"
                            android:layout_gravity="end|center_vertical"
                            android:layout_marginBottom="@dimen/btn_clear_station_tf_margin"
                            android:layout_marginEnd="@dimen/btn_clear_station_tf_margin"
                            android:background="@drawable/ic_clear_tf"
                            android:visibility="gone"/>
                    </FrameLayout>


                    <!-- Arrival Station -->
                    <FrameLayout
                        android:id="@+id/fl_arrival_station"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_below="@id/fl_departure_station">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/til_arrival_station"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <com.jaus.albertogiunta.justintrain_oraripendolaritrenitalia.utils.InstantAutoCompleteTextView
                                android:id="@+id/iatv_arrival_station"
                                android:layout_width="@dimen/iatv_station_width"
                                android:layout_height="wrap_content"
                                android:completionThreshold="1"
                                android:dropDownHeight="match_parent"
                                android:dropDownWidth="@dimen/iatv_station_width"

                                android:hint="@string/hint_arrival"
                                android:inputType="textCapSentences|textNoSuggestions"
                                android:singleLine="true"/>

                        </android.support.design.widget.TextInputLayout>

                        <Button
                            android:id="@+id/btn_clear_arrival_station"
                            android:layout_width="@dimen/btn_clear_tf_side"
                            android:layout_height="@dimen/btn_clear_tf_side"
                            android:layout_gravity="end|center_vertical"
                            android:layout_marginBottom="@dimen/btn_clear_station_tf_margin"
                            android:layout_marginEnd="@dimen/btn_clear_station_tf_margin"
                            android:background="@drawable/ic_clear_tf"
                            android:visibility="gone"/>

                    </FrameLayout>


                    <!-- Swap stations button -->
                    <Button
                        android:id="@+id/btn_swap_station_names"
                        android:layout_width="@dimen/btn_swap_stations_side"
                        android:layout_height="@dimen/btn_swap_stations_side"

                        android:layout_centerInParent="true"
                        android:layout_marginStart="30dp"
                        android:layout_toEndOf="@id/fl_departure_station"

                        android:background="@drawable/ic_swap_vert"/>

                </RelativeLayout>


                <!-- Hour picker container -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rl_station_search_panel"
                    android:orientation="vertical">

                    <!-- Title -->
                    <TextView
                        android:id="@+id/tv_departure_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/title_departure_time"
                        android:textSize="@dimen/fs_floating_title"/>

                    <!-- Picker -->
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/basic_vertical_margin">

                        <!-- - - -->
                        <TextView
                            android:id="@+id/tv_minus_minus_hour"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:padding="@dimen/btn_time_picker_padding"
                            android:text="@string/minus_minus_hour"
                            android:textAlignment="center"
                            android:textSize="@dimen/fs_basic_text"/>

                        <!-- - -->
                        <TextView
                            android:id="@+id/tv_minus_hour"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/tv_minus_minus_hour"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:padding="@dimen/btn_time_picker_padding"
                            android:text="@string/minus_hour"
                            android:textAlignment="center"
                            android:textSize="@dimen/fs_basic_text"/>

                        <TextView
                            android:id="@+id/tv_selected_time"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_toEndOf="@id/tv_minus_hour"
                            android:text="00:00"
                            android:textAlignment="center"
                            android:textColor="@color/textColorPrimary"
                            android:textSize="@dimen/fs_basic_text"/>

                        <!-- + -->
                        <TextView
                            android:id="@+id/plus_hour"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/tv_selected_time"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:padding="@dimen/btn_time_picker_padding"
                            android:text="@string/plus_hour"
                            android:textAlignment="center"
                            android:textSize="@dimen/fs_basic_text"/>

                        <!-- + + -->
                        <TextView
                            android:id="@+id/plus_plus_hour"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/plus_hour"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:padding="@dimen/btn_time_picker_padding"
                            android:text="@string/plus_plus_hour"
                            android:textAlignment="center"
                            android:textSize="@dimen/fs_basic_text"/>

                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>


        <!-- Empty space for FAB to be across edges -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@android:color/transparent"
            android:orientation="vertical">
        </LinearLayout>

    </LinearLayout>


    <!-- FAB -->
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_search_journeys"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="8dp"
        android:clickable="true"
        android:src="@drawable/ic_search"
        app:elevation="6dp"
        app:fabSize="normal"
        app:layout_anchor="@id/cv_search_panel_2"
        app:layout_anchorGravity="bottom|right|end"
        app:rippleColor="@color/colorPrimaryDark"/>

</android.support.design.widget.CoordinatorLayout>