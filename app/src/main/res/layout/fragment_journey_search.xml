<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             tools:context=".journeys.search.JourneySearchFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_departure_station"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.jaus.albertogiunta.justintrain_oraripendolaritrenitalia.utils.InstantAutoCompleteTextView
                android:id="@+id/departure_station"
                android:hint="@string/atv_departure"

                android:layout_width="120dp"
                android:layout_height="wrap_content"

                android:singleLine="true"
                android:completionThreshold="1"
                android:dropDownWidth="match_parent"
                android:inputType="text"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_arrival_station"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/input_layout_departure_station">

            <com.jaus.albertogiunta.justintrain_oraripendolaritrenitalia.utils.InstantAutoCompleteTextView
                android:id="@+id/arrival_station"
                android:hint="@string/atv_arrival"

                android:layout_width="120dp"
                android:layout_height="wrap_content"

                android:singleLine="true"
                android:completionThreshold="1"
                android:dropDownWidth="match_parent"
                android:inputType="text"/>

        </android.support.design.widget.TextInputLayout>

        <SeekBar
            android:id="@+id/time_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@+id/input_layout_departure_station"

            android:layout_marginTop="10sp"/>

        <Button
            android:id="@+id/search_journey"
            android:text="@string/btn_search"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true"/>

    </RelativeLayout>
</FrameLayout>





