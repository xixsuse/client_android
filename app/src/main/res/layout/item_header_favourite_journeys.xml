<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="@dimen/item_height_big"
              android:clickable="false"
              android:background="@color/bg_grey_lighter">

    <TextView
        android:id="@+id/lbl_favourite_journey_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginTop="@dimen/margin_default"
        android:textStyle="bold"
        android:text="@string/title_favourite_journeys"
        android:textColor="@color/txt_grey"
        />

    <TextView
        android:id="@+id/lbl_favourite_journey_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginTop="@dimen/margin_smaller"
        android:text="@string/subtitle_favourite_journeys"
        android:textColor="@color/txt_grey_lighter"
        />

</LinearLayout>