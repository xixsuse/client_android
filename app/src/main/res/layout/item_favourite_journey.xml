<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/thin_card_height"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:elevation="4dp"
    >

    <RelativeLayout
        android:tag="reveal-right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:src="@android:drawable/ic_media_rew"
            android:tint="#ffffffff"
            />
    </RelativeLayout>


    <RelativeLayout
        android:tag="reveal-left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/early1"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@android:drawable/ic_media_ff"
            android:tint="#ffffffff"
            />
    </RelativeLayout>


    <RelativeLayout
        android:tag="front"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/basic_horizontal_margin"
        android:paddingEnd="@dimen/basic_horizontal_margin"
        android:background="#ffffff"
        >

        <TextView
            android:id="@+id/tv_favourite_station_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Ciao"
            />

        <TextView
            android:id="@+id/tv_favourite_station_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Ciao"
            />

    </RelativeLayout>


    <!--<View-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="0.5dp"-->
        <!--android:background="#ccc"-->
        <!--/>-->

</android.support.v7.widget.CardView>