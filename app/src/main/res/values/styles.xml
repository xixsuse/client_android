<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/bg_dark</item>
        <item name="colorPrimaryDark">@color/bg_darker</item>
        <item name="colorAccent">@color/btn_dark_cyan</item>
        <item name="android:textColor">@color/txt_dark</item>
    </style>

    <style name="AppThemeNoShadowActionbar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/bg_dark</item>
        <item name="colorPrimaryDark">@color/bg_darker</item>
        <item name="colorAccent">@color/btn_dark_cyan</item>
        <item name="android:textColor">@color/txt_dark</item>
        <item name="actionBarStyle">@style/Theme.MyApp.ActionBar</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MyApp.ActionBar" parent="style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <!-- remove shadow below action bar -->
        <!-- <item name="android:elevation">0dp</item> -->
        <!-- Support library compatibility -->
        <item name="elevation">0dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="Dialog.FullScreen" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:padding">0dp</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

</resources>
